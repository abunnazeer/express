<!-- header -->
<%- include('header'); -%>
<div class="news__container">
  <!-- posted content of news -->
  <%newsContent.map(function(newsLists){%>
  <a href="<%= newsLists.newsUrl%>">
    <div class="posted__news__container">
      <div class="posted_news__image">
        <img src="<%= newsLists.newsImage %>" alt="" />
      </div>
      <h3 class="posted__news__title"><%= newsLists.newsTitle%></h3>
      <p class="posted__news__content"><%= newsLists.newsCont%></p>
    </div>
  </a>
  <!-- news form -->
  <% });%>

