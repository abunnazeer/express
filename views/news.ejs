    <div class="form__content">
      <form action="/news" method="post" enctype="multipart/form-data">
        <input type="text" name="newstitle" placeholder="News Title" />
        <input type="url" name="newsurl" placeholder="News Source" />
        <textarea
          name="newscontent"
          id=""
          cols="30"
          rows="10"
          placeholder="News content"
        ></textarea>
        <input type="file" name="newsimage" accept=".png, .jpeg, .jpg" />
        <button type="submit" class="btn__style">Send</button>
      </form>
    </div>
  </div>
  <div class="news__btn add">
    <i class="fa-solid fa-plus"></i>
  </div>
</div>

